<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maxime.hellocine.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messageaccueil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/messageaccueil"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:paddingBottom="20dp"
            />



        <TextView
            android:id="@+id/descr_film"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/descr_film"
            />

        <Button
            android:id="@+id/button_film"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/boutonacceuil"
            android:drawableLeft="@drawable/ic_local_movies_black_24dp"
            />


        <Button
            android:id="@+id/button_github"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@string/liengithub"
            android:drawableRight="@drawable/ic_group_black_24dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
